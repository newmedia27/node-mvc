<div class="container">
    <form action="/articles/edit" method="POST">
        <div class="input-field col s6">
            <input id="title" name="title" type="text" class="validate" required value="{{list.title}}">
            <input id="hidden" name="id" type="text"  value="{{list.id}}">
            <label for="name">Title</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
        <div class="input-field col s6">
            <input id="author" name="author" type="text" class="validate" required value="{{list.author}}">
            <label for="last_name">Author</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
        <div class="input-field col s6">
            <input id="link" type="text" name="image" class="validate" value="{{list.image}}">
            <label for="link">Link for image</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>
        <div class="input-field col s6">
            <textarea id="textarea1" class="materialize-textarea" name="description" required>{{list.description}}</textarea>
            <label for="link">Description</label>
            <span class="helper-text" data-error="wrong" data-success="right"></span>
        </div>

        <button class="btn - btn-primary">Send</button>
    </form>
</div>