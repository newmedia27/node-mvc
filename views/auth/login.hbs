<div class="container">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#registration">Registration</a></li>
            </ul>
        </div>
        <div id="login" class="col s12">

            <form action="/auth/login" method="POST">
                <div class="input-field col s12">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <button class="btn - btn-primary" type="submit">Sign in</button>
            </form>
        </div>
        <div id="registration" class="col s12">
            <form action="/auth/registration" method="POST">
                <div class="input-field col s12">
                    <input id="rname" name="name" type="text" class="validate" required>
                    <label for="rname">Name</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <div class="input-field col s12">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="wrong" data-success="right"></span>
                </div>
                <button class="btn - btn-primary" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>